    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run SMAL-Fitter",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/smal_fitter/optimize_to_joints.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Run 3D Fitter",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/fitter_3d/optimise.py",
            "args": [
                "--mesh_dir", "${workspaceFolder}/data/SMAL/big_cats/",
                "--scheme", "default",
                "--lr", "1e-3",
                "--nits", "10",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: GenerateVideo",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/smal_fitter/generate_video.py",
            "console": "integratedTerminal"
        }
    ]
}